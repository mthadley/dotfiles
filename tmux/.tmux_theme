# This tmux statusbar config was created by tmuxline.vim
# on Tue, 27 Mar 2018

set -g status-justify "centre"
set -g status "on"
set -g status-attr "none"
set -g message-command-bg "colour19"
set -g status-left-length "100"
set -g pane-active-border-fg "colour19"
set -g status-bg "colour18"
set -g message-command-fg "colour20"
set -g pane-border-fg "colour18"
set -g message-bg "colour19"
set -g status-left-attr "none"
set -g status-right-attr "none"
set -g status-right-length "100"
set -g message-fg "colour20"
setw -g window-status-fg "colour8"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour18"
setw -g window-status-activity-attr "underscore"
setw -g window-status-activity-fg "colour8"
setw -g window-status-separator ""
setw -g window-status-bg "colour18"
set -g status-left "#[fg=colour19,bg=colour20] #S #[fg=colour20,bg=colour19,nobold,nounderscore,noitalics]#[fg=colour20,bg=colour19] #(uptime | cut -d \",\" -f 1 | cut -d \" \" -f 5-) up #[fg=colour19,bg=colour18,nobold,nounderscore,noitalics]#[fg=colour18,bg=colour18,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour18,bg=colour18,nobold,nounderscore,noitalics]#[fg=colour19,bg=colour18,nobold,nounderscore,noitalics]#[fg=colour20,bg=colour19] #H #[fg=colour20,bg=colour19,nobold,nounderscore,noitalics]#[fg=colour19,bg=colour20] #(date +\"%a %b %e %R %p\") "
setw -g window-status-format "#[fg=colour18,bg=colour18,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour18,bg=colour18,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour18,bg=colour19,nobold,nounderscore,noitalics]#[fg=colour20,bg=colour19] #I #W #[fg=colour19,bg=colour18,nobold,nounderscore,noitalics]"
